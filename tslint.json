{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-name" : [true, "never-prefix"],
    "no-debugger": false,
    "no-console": false,
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "semicolon": [true, "always", "ignore-interfaces"]
  }
}
