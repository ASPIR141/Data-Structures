{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-name" : [true, "never-prefix"],
    "no-debugger": false,
    "no-console": false,
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "semicolon": [true, "always", "ignore-interfaces"],
    "unified-signatures": false
  }
}
